<%- include("header"); -%>

  <div class="card contest-card">
    <div class="card-body">
      <h1 class="card-title">
        <%= platform %>
      </h1>
      <br>




      <form action="/contest" method="POST">
        <button class="card-link btn btn-lg btn-outline-light" name="num1" value="<%= platform %>fut"
          type="submit">Future Contests</button>


        <button class="card-link btn btn-lg btn-outline-light" name="num1" value="<%= platform %>liv" type="submit">Live
          Contests</button>
        <button class="card-link btn btn-lg btn-outline-light" name="num1" value="<%= platform %>pas" type="submit">Past
          Contests</button>

      </form>
    </div>
  </div>

      <% for(var i=0;i<contestArray.length;i++) { %>
        <div class="card text-center">
          <div class="card-header">
            <%= platform %> <%= time %> Contests
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= contestArray[i].event %></h5>
            <p class="card-text"> Start Date :  <%= contestArray[i].start %> </p>
            <p class="card-text"> End Date : <%= contestArray[i].end %> </p>
            
            <p class="card-text"> Duration : <%= contestArray[i].duration %></p>
            
          </div>
          <div class="card-footer text-muted">
            <a href="<%= contestArray[i].href %>" class="btn btn-primary" target="_blank">Visit</a>
          </div>
        </div>
        <% } %>


   
