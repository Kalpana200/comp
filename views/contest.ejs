<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title> CC Monitor </title>
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <!-- <link href="https://fonts.googleapis.com/css2?family=Barrio&display=swap" rel="stylesheet"> -->
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body style="background-color: #12232e;">
  <!-- Navigation Bar -->
  <section>
  <nav class="navbar navbar-custom nav-class">
    <a class="navbar-brand title-name-contest" href="#">CC Monitor</a>
   <form action="/team" method="POST">
    <a class="home-btn btn btn-outline-dark" href="/">Home</a>
    <button class="team-btn btn btn-dark" type="submit" name="button" value="second">About</button>

   </form>
   
  </nav>
</section>

  <div class="card contest-card">
    <div class="card-body">
      <h1 class="card-title">
        <%= platform %>
      </h1>
      <br>




      <form action="/contest" method="POST" class="buttons">
<div class="time-buttons">

        <button class="card-link btn btn-lg btn-outline-dark" name="num1" value="<%= platform %>fut"
          type="submit">Future Contests</button>


        <button class="card-link btn btn-lg btn-outline-dark" name="num1" value="<%= platform %>liv" type="submit">Live
          Contests</button>
        <button class="card-link btn btn-lg btn-outline-dark" name="num1" value="<%= platform %>pas" type="submit">Past
          Contests</button>
        </div>
      </form>
    </div>
  </div>

      <% for(var i=0;i<contestArray.length;i++) { %>
        <div class="card text-center contest-card">
          <div class="card-header">
           <h4> <%= platform %> contest </h4>
          </div>
          <div class="card-body">
            <h3 class="card-title"><%= contestArray[i].event %></h3>
            <p class="card-text"> Start Date :  <%= contestArray[i].start %> </p>
            <p class="card-text"> End Date : <%= contestArray[i].end %> </p>

            <p class="card-text">Status : <%= time %></p>

          </div>
          <div class="card-footer text-muted">
            <a href="<%= contestArray[i].href %>" class="btn btn-lg btn-dark" target="_blank">Visit</a>
          </div>
        </div>
        <% } %>

